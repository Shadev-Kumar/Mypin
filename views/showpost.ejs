<%- include('./partials/header.ejs') %>

<div class="bg-zinc-800 w-full px-10 py-10 text-white">
    <div class="flex justify-center">
        <div class="max-w-1/4 h-auto  bg-zinc-900 rounded-lg shadow-lg p-6 flex gap-10">
            <div class="mb-6 w-80 h-80">
                <img class=" object-cover rounded-lg" src="/images/uploads/<%= userPost.image %>" alt="">
                <div class="px-2 py-1 mt-2 flex items-center justify-end gap-3">
                    <span class="text-lg"><%= userPost.likes.length %></span>
                    <a href="/like/post/<%= userPost._id %>">
                        <% if(userPost.likes.indexOf(user._id) !== -1){
                            %>
                            <i class="ri-heart-fill heart-icon text-2xl text-red-500 "></i>
                            <%
                        } else {
                            %>
                            <i class="ri-heart-line heart-icon text-2xl "></i>
                            <%
                        } %>
                    </a>
                </div>
            </div>
            <div class="">
                <h2 class="text-xl font-semibold mb-2"><%= userPost.title %></h2>
                <p class="text-sm font-light mb-4"><%= userPost.description %></p>
                <a href="/profile" class="text-sm font-light rounded-lg px-1 py-1 opacity-60 hover:bg-zinc-500">@<%= userPost.user.username %></a>
                <hr class="border-t border-gray-600 mt-6 mb-2">
                <div class="flex w-full h-auto flex-col">
                    <h3 class="text-md font-semibold mb-4 ">Comments</h3>
                    <div class="display-comments w-80 h-80 bg-zinc-800 p-4 rounded-lg mb-4">
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex items-center">
                                <p class="text-sm font-semibold">@sourabh</p>
                            </div>
                            <p class="text-xs font-light opacity-60">2 hours ago</p>
                        </div>
                        <p class="text-sm font-light">So beautifull! so Eligent!! just looking like a wooww!!</p>
                    </div>
                        <div class="text-left mb-4">
                            <form id="commentForm">
                                <div class="flex justify-between mb-2">
                                    <input type="text" id="commentInput" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-indigo-500 bg-zinc-800" placeholder="Leave a comment">
                                    <button type="submit" class="text-xs font-light opacity-60 mx-1 text-center bg-indigo-500 px-2 py-1 rounded-lg text-white hover:bg-indigo-600">Post</button>
                                </div>
                            </form>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

</script>

<%- include('./partials/footer.ejs') %>
