<%- include('./partials/header.ejs') %>

<div class="bg-zinc-800 w-full min-h-screen px-20 py-5 text-white ">
        <h1 class="text-3xl tracking-tighter">Create Pin</h1>
        <hr class="opacity-10 mt-5">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block px-3 py-2 mt-2 rounded-lg "  type="file" name="postimage">
            <input class="block w-1/3 px-3 py-2 mt-2 border-[1px]  rounded-xl  bg-zinc-800"  type="text" name="title" placeholder="title">
            <textarea class="block w-1/3 px-3 py-2 mt-2 border-[1px] rounded-xl  bg-zinc-800"  name="description"  cols="30" rows="5" placeholder="description"></textarea>
            <input class="block w-1/3 px-3 py-2 mt-2  rounded-xl  bg-gray-700" type="submit" value="Create Pin" >
        </form>
</div>

